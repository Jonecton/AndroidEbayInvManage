<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="clip_horizontal|center"
    android:background="@drawable/bg_sold"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".Offline">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="138dp"
        android:layout_gravity="center"
        android:fontFamily="casual"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_view_inventory"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_custom"
        android:fontFamily="@font/montserrat"
        android:text="VIEW INVENTORY"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_view_current_listings"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_custom"
        android:fontFamily="@font/montserrat"
        android:text="View Current Listings"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_search_ebay"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_custom"
        android:fontFamily="@font/montserrat"
        android:text="Search eBay"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_add_listing"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_custom"
        android:fontFamily="@font/montserrat"
        android:text="Add Listing"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_edit_listing"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_custom"
        android:fontFamily="@font/montserrat"
        android:text="Edit Listing"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_messages"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_custom"
        android:fontFamily="@font/montserrat"
        android:text="Messages"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

</LinearLayout>
